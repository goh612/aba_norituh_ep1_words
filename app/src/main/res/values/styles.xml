<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="DialogButtonTheme" parent="AppTheme">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="StudyText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50dp</item>
    </style>

    <style name="ScoreSub" parent="AppTheme">
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Score" parent="AppTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

    </style>

    <style name="NaviButton" parent="AppTheme">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8dp</item>
        <item name="android:onClick">naviClick</item>
    </style>

    <style name="MainButton" parent="AppTheme">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_toEndOf">@id/main_image</item>
    </style>


    <style name="SettingsButton" parent="AppTheme">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="SettingsClientText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="SettingsClientTextSub" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>