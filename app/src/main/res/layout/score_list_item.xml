<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/tv_score_list_num"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="1"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_score_list_date"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:text="0000-00-00 00:00:00"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_score_list_element"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="자음 ㄱ"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/iv_score_list_position_start"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/gray_clean_back"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/iv_score_list_position_center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/gray_clean_back"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/iv_score_list_position_end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/gray_clean_back"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/tv_score_list_score"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="10/20"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>



</RelativeLayout>