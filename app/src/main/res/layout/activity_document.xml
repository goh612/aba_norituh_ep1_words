<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:background="@color/myBlue"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_docu_clients"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_corner_back"
            android:padding="10dp"



            >
        </android.support.v7.widget.RecyclerView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_corner_back"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_docu_name_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:text="이름 : "
                />

            <TextView
                android:id="@+id/tv_docu_age_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:layout_below="@id/tv_docu_name_sub"
                android:text="나이 : "
                />

            <TextView
                android:id="@+id/tv_docu_gender_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:text="성별 : "
                android:layout_below="@id/tv_docu_age_sub"
                />

            <TextView
                android:id="@+id/tv_docu_note_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:text="노트 : "
                android:layout_below="@id/tv_docu_gender_sub"
                />






            <TextView
                android:id="@+id/tv_docu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_docu_name_sub"
                android:textSize="17sp"
                />

            <TextView
                android:id="@+id/tv_docu_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_docu_name_sub"
                android:textSize="17sp"
                android:layout_below="@id/tv_docu_name_sub"
                />

            <TextView
                android:id="@+id/tv_docu_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_docu_name_sub"
                android:textSize="17sp"
                android:layout_below="@id/tv_docu_age_sub"
                />

            <TextView
                android:id="@+id/tv_docu_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/tv_docu_name_sub"
                android:textSize="17sp"
                android:layout_below="@id/tv_docu_gender_sub"
                />

            <Button
                android:id="@+id/btn_docu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/blue_corner_back"
                android:text="보기"
                />

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/navi"/>


</android.support.v4.widget.DrawerLayout>