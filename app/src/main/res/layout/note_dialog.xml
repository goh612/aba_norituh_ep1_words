<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:id="@+id/lay_note_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/stoke"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            >

            <TextView
                android:id="@+id/tv_note_name_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="이름 : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_note_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:text="고준권"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_note_age_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start"
                android:text="나이 : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_note_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:text="3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_note_gender_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start"
                android:text="성별 : "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_note_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:text="남"
                android:textSize="18sp" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lay_note_set"
            android:layout_above="@id/btn_note"
            android:layout_margin="10dp"
            android:background="@drawable/gray_clean_back"
            >
            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:padding="10dp"
                android:background="@drawable/white_clean_back"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:hint="이곳을 길게 누르시면 입력하실 수 있습니다."
                android:padding="10dp"
                />

        </FrameLayout>


        
        <Button
            android:id="@+id/btn_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/blue_corner_back"
            android:text="확인"
            />


        
        
    </RelativeLayout>




</android.support.v7.widget.CardView>