<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SettingsAddFragment">


    <EditText
        android:id="@+id/et_word_add"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/gray_clean_back"
        android:hint="단어 입력"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_word_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_word_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_corner_back"
        android:text="추가"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_word_add"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="한번에 여러 단어를 입력하실 경우에는\n 단어 사이에 , 를 입력해 주시기 바랍니다."
        android:gravity="center"
        />


</RelativeLayout>