<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/aba_ep1_main"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btn_study"
            style="@style/MainButton"
            android:text="시작하기"
            android:background="@drawable/green_corner_back"
            />

        <Button
            android:id="@+id/btn_document"
            style="@style/MainButton"
            android:text="기록보기"
            android:background="@drawable/blue_corner_back"
            android:layout_below="@id/btn_study"
            android:layout_marginTop="30dp"
            />



        <Button
            android:id="@+id/btn_setting"
            style="@style/MainButton"
            android:text="설정"
            android:background="@drawable/orange_corner_back"
            android:layout_below="@id/btn_document"
            android:layout_marginTop="30dp"
            />


    </RelativeLayout>

</RelativeLayout>