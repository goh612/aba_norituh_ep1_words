<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:id="@+id/lay_finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="20dp"
        android:background="@drawable/finish_image1"
        >

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:text="정말 정말 대단해~ 짱짱짱짱!!"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_centerInParent="true"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_finish_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="기록하기"
            android:layout_toLeftOf="@id/btn_finish_end"
            android:backgroundTint="@color/myBlue"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/btn_finish_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="완료"
            android:backgroundTint="@color/myGreen"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/btn_finish_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_finish_end"
            android:text="다시하기"
            android:backgroundTint="@color/myOrange"
            android:textColor="#fff"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>